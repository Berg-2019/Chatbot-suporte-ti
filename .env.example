# =============================================================================
# Bot WhatsApp Atendimento - Variáveis de Ambiente
# =============================================================================
# Copie este arquivo para .env e configure as variáveis

# -----------------------------------------------------------------------------
# Configurações do Bot
# -----------------------------------------------------------------------------
BOT_NAME="Bot de Atendimento Técnico"
PREFIX="!"
BOT_PORT=3003

# ID do grupo de técnicos no WhatsApp (obtenha via comando !grupoid)
GRUPO_TECNICO_ID=

# Números root (separados por vírgula, sem espaços)
ROOT_NUMBERS=556981170027,556884268042

# -----------------------------------------------------------------------------
# Configurações de IA (Ollama) - Opcional
# -----------------------------------------------------------------------------
OLLAMA_ENABLED=false
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=llama3.2
OLLAMA_PORT=11434

# -----------------------------------------------------------------------------
# Configurações de Email - Opcional
# -----------------------------------------------------------------------------
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=

# -----------------------------------------------------------------------------
# Painel Web - Opcional
# -----------------------------------------------------------------------------
WEB_PORT=8000
